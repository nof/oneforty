.container
  .page-header
    %h2 ログイン
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.input :email, placeholder: 'メールアドレス', label: false, autofocus: true
    .field
      = f.input :password, placeholder: 'パスワード', label: false, autocomplete: 'off'
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label 'ログイン情報を記憶'
    .actions
      = f.button :submit, 'ログイン', class: 'btn-info btn-block'
  = render 'devise/shared/links'

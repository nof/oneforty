.container
  .page-header
    %h2 パスワード変更
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .field
      = f.input :password, placeholder: '新しいパスワード', autofocus: true, autocomplete: "off"
    .field
      = f.input :password_confirmation, placeholder: 'パスワード確認', autocomplete: "off"
    .actions
      = f.button :submit, "パスワード変更", class: 'btn-info btn-bloc'
    = render "devise/shared/links"
